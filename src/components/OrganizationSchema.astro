---
interface Props {
  name: string;
  url: string;
  logo?: string;
  description?: string;
  sameAs?: string[];
}

const { name, url, logo, description = '', sameAs = [] } = Astro.props;

const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: name,
  url: url,
  ...(logo && {
    logo: {
      '@type': 'ImageObject',
      url: logo,
    },
  }),
  ...(description && { description: description }),
  ...(sameAs.length > 0 && { sameAs: sameAs }),
};
---

<script
  type="application/ld+json"
  is:inline
  set:html={JSON.stringify(organizationSchema)}
/>
