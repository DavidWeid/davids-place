---
interface Props {
  tag: string;
  clickable: boolean;
  variant?: 'default' | 'large';
  additionalClasses?: string;
}

const {
  tag,
  clickable,
  variant = 'default',
  additionalClasses = '',
} = Astro.props;
const clickableClasses: string = clickable
  ? 'hover:bg-accent-dark hover:text-accent-light transition-colors duration-500'
  : '';
const variantClasses: { [key: string]: string } = {
  default: 'px-2.5 py-2 text-xs',
  large: 'px-3 py-2 text-base',
};
---

<span
  class={`block whitespace-nowrap select-none ${variantClasses[variant]} tracking-wider font-sans-syne font-semibold bg-green-emerald dark:bg-blue-dark text-dark dark:text-light rounded-full uppercase ${clickableClasses} ${additionalClasses}`}
>
  {tag}
</span>
