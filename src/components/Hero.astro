---
interface Props {
  title: string;
  description: string | null;
}

const { title, description } = Astro.props;
---

<section>
  <div class="container">
    <span class="laptop:pb-16 desktop:pb-20 block pb-10"></span>

    <h1 set:html={title} class="text-center" />

    {
      description ? (
        <>
          <span class="block pb-8" />
          <p set:html={description} class="text-center text-xl" />
          <slot />
          <span class="laptop:pb-16 desktop:pb-20 block pb-10" />
        </>
      ) : (
        <>
          <slot />
          <span class="laptop:pb-16 desktop:pb-20 block pb-10" />
        </>
      )
    }
  </div>
</section>
