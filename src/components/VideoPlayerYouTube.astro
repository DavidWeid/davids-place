---
interface Props {
  src: string;
  loading?: 'lazy' | 'eager';
  title?: string;
}

const { src, loading = 'lazy', title = 'YouTube video player' } = Astro.props;
---

<iframe
  loading={loading}
  class="aspect-video h-auto w-full"
  width="640"
  height="360"
  src={src}
  title={title}
  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
  allowfullscreen
>
</iframe>
