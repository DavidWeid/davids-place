---
import { Image } from 'astro:assets';

interface Props {
  src: any;
  class?: string;
  alt: string;
  loading?: 'lazy' | 'eager';
}

interface Image {
  src: any;
  width: number;
  densities: number[];
  class?: string;
}

const { src, ...attrs } = Astro.props;

const classes: string = attrs.class
  ? attrs.class
  : 'reveal max-w-(--breakpoint-tablet) mx-auto my-0! rounded-lg border-medium/80';
---

<div class="gradient-border rounded-lg">
  <Image
    src={src}
    {...attrs}
    width={src.width / 2}
    densities={[1.5, 2]}
    class={classes}
  />
</div>
