---
import SvgGenerator from '@components/SvgGenerator.astro';

const baseURL = import.meta.env.BASE_URL;
const year: number = new Date().getFullYear();
---

<footer
  class="bg-dark text-light from-blue-dark/60 to-blue-darfrom-blue-dark/10 hover:from-blue-dark/80 z-30 bg-linear-to-tr py-4"
>
  <div class="container flex items-center justify-between">
    <span class="text-light flex items-center">David {year}</span>
    <ul role="list" class="flex items-center gap-3">
      <li role="listitem">
        <a
          href={`${baseURL}style/`}
          title="Style Guide"
          class="hover:text-green-emerald block px-2 py-2 text-xs"
          >Site Styles</a
        >
      </li>

      <li role="listitem">
        <a
          href="https://github.com/DavidWeid/"
          title="GitHub Profile"
          class="group block px-2 py-2"
        >
          <span class="sr-only"
            >View my GitHub Profile (Redirects to GitHub.com)</span
          >
          <SvgGenerator
            svg="icons/github"
            className="fill-light group-hover:fill-green-emerald transition-all group-hover:scale-125"
          />
        </a>
      </li>

      <li role="listitem">
        <a
          href="https://www.linkedin.com/in/david-weid/"
          title="LinkedIn Profile"
          class="group block px-2 py-2"
        >
          <span class="sr-only"
            >View my LinkedIn Profile (Redirects to LinkedIn.com)</span
          >
          <SvgGenerator
            svg="icons/linkedin"
            className="fill-light group-hover:fill-green-emerald transition-all group-hover:scale-125"
          />
        </a>
      </li>

      <li role="listitem">
        <a
          href="mailto:david.weid.2@gmail.com"
          title="Email Contact"
          class="group block px-2 py-2"
        >
          <span class="sr-only"
            >Send me an email (Open email via OS settings)</span
          >
          <SvgGenerator
            svg="icons/email"
            className="fill-light group-hover:fill-green-emerald transition-all group-hover:scale-125"
          />
        </a>
      </li>
    </ul>
  </div>

  <div class="container">
    <span class="border-t-green-emerald mt-2 mb-1 block border-t"></span>
  </div>

  <div class="container mt-1 flex items-center justify-center gap-6">
    <!-- <a
      href="https://www.flaticon.com/authors/justicon"
      class="text-center text-light/50 hover:text-green-emerald/75 text-xs"
      >Coding icon created by justicon - Flaticon <span class="sr-only">(Redirects to Flaticon.com)</span></a
    > -->

    <!-- svg icon source: https://www.svgrepo.com/collection/iconhub-tritone-icons/ -->

    <a
      href="https://www.canva.com/p/unfold-x/?utm_medium=referral&utm_source=creator_share&utm_campaign=creator_share"
      target="_blank"
      class="text-light/50 hover:text-green-emerald/75 text-center text-xs"
      >Gaming page icons created by Unfold X - Canva <span class="sr-only"
        >(Redirects to Canva.com)</span
      ></a
    >

    <span class="opacity-50" aria-hidden="true">|</span>

    <a
      href="https://www.canva.com/p/dedy-izhams-images/?utm_medium=referral&utm_source=creator_share&utm_campaign=creator_share"
      target="_blank"
      class="text-light/50 hover:text-green-emerald/75 text-center text-xs"
      >Astronaut cartoon created by Dedy Izham - Canva <span class="sr-only"
        >(Redirects to Canva.com)</span
      ></a
    >
  </div>
</footer>
