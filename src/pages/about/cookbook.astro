---
import Base from '@layouts/Base.astro';
import { Image } from 'astro:assets';

import ImageChoppingBoard from '@images/about/cookbook/chopping-board.png';
import ImageMeat from '@images/about/cookbook/meat.png';
import ImageRibs from '@images/about/cookbook/ribs.png';
import ImageMint from '@images/about/cookbook/mint.png';
import ImageBlueberry from '@images/about/cookbook/blueberry.png';
import ImagePizza from '@images/about/cookbook/pizza.png';
import ImageTacos from '@images/about/cookbook/tacos.png';
import ImageDumplings from '@images/about/cookbook/dumplings.png';
import ImageCookies from '@images/about/cookbook/cookies.png';
import ImageKungPaoChicken from '@images/about/cookbook/kung-pao-chicken.png';
import ImageSushi from '@images/about/cookbook/sushi.png';
import ImageBread from '@images/about/cookbook/bread.png';
import ImageNoodles from '@images/about/cookbook/noodles.png';
import ImageFriendsEating from '@images/about/cookbook/friends-eating.png';
import ImageCookingTogether from '@images/about/cookbook/cooking-together.png';
import ImageVeganFood from '@images/about/cookbook/vegan-food.png';
import IconQuotationMark from '@images/icons/quotation-mark.svg';
import IconKitchenPackApron from '@images/icons/cookbook/kitchen-pack-apron.svg';
import IconKitchenPackCake from '@images/icons/cookbook/kitchen-pack-cake.svg';
import IconKitchenPackKnife from '@images/icons/cookbook/kitchen-pack-knife.svg';
import IconKitchenPackMixer from '@images/icons/cookbook/kitchen-pack-mixer.svg';
import IconKitchenPackRollingPin from '@images/icons/cookbook/kitchen-pack-rolling-pin.svg';
import IconKitchenPackSpatula from '@images/icons/cookbook/kitchen-pack-spatula.svg';
import IconKitchenPackTea from '@images/icons/cookbook/kitchen-pack-tea.svg';
import IconKitchenPackPestleMortar from '@images/icons/cookbook/kitchen-pack-pestle-mortar.svg';
import IconKitchenPackPot from '@images/icons/cookbook/kitchen-pack-pot.svg';

const baseURL = import.meta.env.BASE_URL;

const title = 'David’s Cookbook - About';
const header = 'Discover Your Next Favorite Recipe';
const subheader = 'Explore a diverse cookbook with easy-to-follow dishes';
const cTA = 'START COOKING';
---

<Base title={title}>
  <!-- Hero -->
  <section
    class="relative overflow-hidden pt-28 pb-40 laptop:py-36 bg-blue-dark dark:bg-blue-dark/80 text-light"
  >
    <div
      class="relative z-20 container py-10 flex flex-col items-center gap-8 bg-dark/25 backdrop-blur-md laptop:bg-dark/0 laptop:backdrop-blur-none"
    >
      <h1
        class="text-display laptop:max-w-[50vw] desktop:max-w-[65vw] desktopxl:max-w-[50vw] text-center"
      >
        {header}
      </h1>

      <p class="text-display-eyebrow text-center pb-8">{subheader}</p>

      <a
        href={`${baseURL}cookbook/`}
        class="inline-block font-bold text-xl tracking-wider px-6 py-3 text-light shadow-2xl shadow-dark bg-green-dark hover:bg-blue-dark rounded-lg transition-all duration-500 green-shimmer-slow hover:blue-shimmer-slow active:brightness-75"
        >{cTA}</a
      >
    </div>
    <Image
      src={ImageMint}
      alt="Mint leaves"
      width={ImageMint.width}
      height={ImageMint.height}
      loading="eager"
      class="w-max h-auto absolute z-10 laptop:z-0 -left-40 -top-36 tablet:-left-60 tablet:-top-40 laptop:-top-52 laptop:-left-56 desktop:-left-48 desktop:-top-28 -rotate-45 desktop:rotate-0 scale-50 desktop:scale-100 drop-shadow-lg drop-shadow-blue-light/80 dark:drop-shadow-blue-dark/90"
    />
    <Image
      src={ImageBlueberry}
      alt="Blueberries"
      width={ImageBlueberry.width}
      height={ImageBlueberry.height}
      loading="eager"
      class="w-max h-auto absolute z-0 -right-40 -top-32 laptop:right-[unset] laptop:top-[unset] laptop:-left-44 laptop:-bottom-36 desktop:-bottom-32 -rotate-45 laptop:rotate-[145deg] desktop:rotate-12 scale-50 desktop:scale-100 drop-shadow-lg drop-shadow-blue-light/80 dark:drop-shadow-blue-dark/90"
    />
    <Image
      src={ImageChoppingBoard}
      alt="Chopping Board"
      width={ImageChoppingBoard.width}
      height={ImageChoppingBoard.height}
      loading="eager"
      class="w-max h-auto absolute z-10 laptop:z-0 -right-32 -bottom-28 tablet:-right-36 tablet:-bottom-40 laptop:bottom-[unset] laptop:-top-28 laptop:-right-36 -rotate-12 desktop:rotate-45 scale-50 desktop:scale-100 drop-shadow-lg drop-shadow-blue-light/80 dark:drop-shadow-blue-dark/90"
    />
    <Image
      src={ImageMeat}
      alt="Meat"
      width={ImageMeat.width}
      height={ImageMeat.height}
      loading="eager"
      class="w-max h-auto absolute z-0 laptop:z-10 -left-48 -bottom-14 tablet:-left-56 laptop:-right-56 laptop:-bottom-32 laptop:left-[unset] desktop:-right-32 desktop:-bottom-20 rotate-180 laptop:rotate-12 desktop:rotate-0 scale-50 desktop:scale-100 drop-shadow-lg drop-shadow-blue-light/80 dark:drop-shadow-blue-dark/90"
    />
    <Image
      src={ImageRibs}
      alt="Ribs"
      width={ImageRibs.width}
      height={ImageRibs.height}
      loading="eager"
      class="w-max h-auto hidden laptop:block absolute z-0 -bottom-48 -right-44 desktop:-bottom-40 desktop:-right-48 rotate-45 desktop:rotate-12 scale-50 desktop:scale-100 drop-shadow-lg drop-shadow-blue-light/80 dark:drop-shadow-blue-dark/90"
    />
    <a
      href="https://www.canva.com/p/iconsy/"
      class="text-xs text-dark content-link-gradient absolute right-4 bottom-0 z-20"
      >Hero images by <span class="font-sans-syne">@iconsy</span></a
    >
  </section>

  <!-- Image Row -->
  <section id="image-row" class="relative bg-light dark:bg-medium py-20">
    <div
      class="container grid grid-cols-4 grid-rows-2 tablet:grid-cols-8 tablet:grid-rows-1 gap-x-12 laptop:gap-x-16 gap-y-10 items-center"
    >
      <Image
        src={ImagePizza}
        alt="Pizza"
        width={ImagePizza.width}
        height={ImagePizza.height}
        loading="eager"
        class="w-full h-auto desktop:max-w-[100px] desktop:mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25 image-row-1"
      />
      <Image
        src={ImageTacos}
        alt="Tacos"
        width={ImageTacos.width}
        height={ImageTacos.height}
        loading="eager"
        class="w-full h-auto desktop:max-w-[100px] desktop:mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25 image-row-1"
      />
      <Image
        src={ImageDumplings}
        alt="Dumplings"
        width={ImageDumplings.width}
        height={ImageDumplings.height}
        loading="eager"
        class="w-full h-auto desktop:max-w-[100px] desktop:mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25 image-row-1"
      />
      <Image
        src={ImageCookies}
        alt="Cookies"
        width={ImageCookies.width}
        height={ImageCookies.height}
        loading="eager"
        class="w-full h-auto desktop:max-w-[100px] desktop:mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25 image-row-1"
      />
      <Image
        src={ImageKungPaoChicken}
        alt="Kung Pao Chicken"
        width={ImageKungPaoChicken.width}
        height={ImageKungPaoChicken.height}
        loading="eager"
        class="w-full h-auto desktop:max-w-[100px] desktop:mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25 image-row-2"
      />
      <Image
        src={ImageSushi}
        alt="Sushi"
        width={ImageSushi.width}
        height={ImageSushi.height}
        loading="eager"
        class="w-full h-auto desktop:max-w-[100px] desktop:mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25 image-row-2"
      />
      <Image
        src={ImageBread}
        alt="Bread"
        width={ImageBread.width}
        height={ImageBread.height}
        loading="eager"
        class="w-full h-auto desktop:max-w-[100px] desktop:mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25 image-row-2"
      />
      <Image
        src={ImageNoodles}
        alt="Noodles"
        width={ImageNoodles.width}
        height={ImageNoodles.height}
        loading="eager"
        class="w-full h-auto desktop:max-w-[100px] desktop:mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25 image-row-2"
      />
    </div>
  </section>

  <hr class="green-blue-shimmer-slow h-1 border-0" />

  <!-- Trust Row -->
  <section class="relative py-20">
    <h2 class="container text-display-minor text-center pb-10">
      A diverse and ever-growing cookbook
    </h2>

    <div
      class="container flex flex-col tablet:flex-row items-center justify-around gap-5 tablet:gap-10 desktop:gap-20"
    >
      <div class="flex flex-col gap-3 desktop:gap-0 items-center">
        <p class="text-display font-bold font-mono">15+</p><p
          class="text-display-eyebrow text-center"
        >
          Ready-to-use recipes
        </p>
      </div>
      <div class="flex flex-col gap-3 desktop:gap-0 items-center">
        <p class="text-display font-bold font-mono">8+</p><p
          class="text-display-eyebrow text-center"
        >
          Cultures of the world
        </p>
      </div>
      <div class="flex flex-col gap-3 desktop:gap-0 items-center">
        <p class="text-display font-bold font-mono">32+</p><p
          class="text-display-eyebrow text-center"
        >
          Collections of cuisines
        </p>
      </div>
    </div>
  </section>

  <hr class="green-blue-shimmer-slow h-1 border-0" />

  <!-- Problem Solving Row -->
  <section class="relative py-20">
    <div
      class="container grid grid-cols-1 laptop:grid-cols-2 gap-x-12 gap-y-24 items-center"
    >
      <div class="order-1">
        <h2 class="text-display-minor text-gradient pb-5 w-max max-w-full">
          Finally answer: “What’s for Dinner?”
        </h2>
        <p class="h3 pb-5">
          Are you tired of cooking the same few meals on repeat, or spending
          hours searching online for inspiration only to come up empty-handed?
          Deciding what to cook every day can be a major source of stress and
          lead to uninspired dinners.
        </p>
        <p class="h3">
          Discover a world of new flavors. Our diverse collection of carefully
          curated recipes ensures you’ll always find fresh, exciting ideas to
          break out of your cooking rut and make mealtime exciting again.
        </p>
      </div>

      <div class="order-2">
        <Image
          src={ImageFriendsEating}
          alt="Friends Eating together"
          width={ImageFriendsEating.width}
          height={ImageFriendsEating.height}
          loading="lazy"
          class="reveal w-8/12 tablet:w-9/12 desktopxl:w-6/12 h-auto mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25"
        />
      </div>

      <div class="order-4 laptop:order-3">
        <Image
          src={ImageCookingTogether}
          alt="Cooking together"
          width={ImageCookingTogether.width}
          height={ImageCookingTogether.height}
          loading="lazy"
          class="reveal w-8/12 tablet:w-9/12 desktopxl:w-6/12 h-auto mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25"
        />
      </div>

      <div class="order-3 laptop:order-4">
        <h2 class="text-display-minor text-gradient pb-5 w-max max-w-full">
          No More Lost Recipes or Complicated Instructions
        </h2>
        <p class="h3 pb-5">
          Do you have favorite recipes scattered across countless browser tabs,
          handwritten notes, or old cookbooks? And when you do find a recipe, is
          it often too complicated, requiring obscure ingredients or advanced
          techniques that make cooking feel like a chore?
        </p>
        <p class="h3">
          Simplify your kitchen experience. All recipes in <a
            href={`${baseURL}cookbook/`}
            class="content-link-gradient">David’s Place Cookbook</a
          > are easy-to-follow, clearly organized, and available in one convenient
          place, transforming complex dishes into enjoyable culinary adventures.
        </p>
      </div>

      <div class="order-5">
        <h2 class="text-display-minor text-gradient pb-5 w-max max-w-full">
          Eat Vegan or Dairy-Free with Confidence
        </h2>
        <p class="h3 pb-5">
          Struggling to find delicious recipes that align with your dietary
          restrictions, preferences, or available ingredients? Sifting through
          endless options to find something dairy-free, vegan, or just right for
          tonight can be incredibly time-consuming.
        </p>
        <p class="h3">
          Effortlessly find recipes tailored for you. With clearly tagged
          dietary information and a wide range of options, all dairy-free, our
          cookbook makes it simple to discover dishes that fit your lifestyle,
          ensuring everyone at the table is happy.
        </p>
      </div>

      <div class="order-6">
        <Image
          src={ImageVeganFood}
          alt="Cooking together"
          width={ImageVeganFood.width}
          height={ImageVeganFood.height}
          loading="lazy"
          class="reveal w-8/12 tablet:w-9/12 desktopxl:w-6/12 h-auto mx-auto drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg dark:drop-shadow-light/25"
        />
      </div>
    </div>
  </section>

  <!-- Testimonial Row -->
  <section class="relative py-20 bg-green-dark dark:bg-blue-dark">
    <div
      class="container flex flex-col gap-y-10 tablet:grid tablet:grid-cols-12 tablet:gap-x-12"
    >
      <blockquote class="relative tablet:col-span-7 tablet:col-start-2 h3">
        <IconQuotationMark
          class="fill-white tablet:absolute tablet:top-0 tablet:-left-20 laptop:-left-28 w-16 h-16 laptop:w-20 laptop:h-20 wave"
        />
        <p class="pt-2.5 tablet:pt-0">
          As someone who appreciates diverse and approachable cooking, David’s
          Place Cookbook is a fantastic resource. The clear organization and
          helpful tags for dietary needs make it incredibly easy to find exactly
          what you’re looking for. The Kung Pao Tofu recipe is a perfect
          example: detailed instructions guide you to a delightfully crispy and
          flavorful dish, proving that delicious, plant-based meals are entirely
          achievable!
        </p>
        <p class="pt-5 ml-2.5 text-2xl tablet:text-3xl">
          — <cite class="font-sans-syne not-italic"
            >David, Creator of David’s Place</cite
          >
        </p>
      </blockquote>
      <div class="col-span-3 h-max">
        <IconKitchenPackApron
          class="max-w-44 tablet:max-w-52 mx-auto tablet:mx-0 drop-shadow-md drop-shadow-medium/25 dark:drop-shadow-lg"
        />
      </div>
    </div>
  </section>

  <section class="relative py-20 tablet:py-10 bg-medium dark:bg-light">
    <div class="container circular-grid">
      <div class="div1 justify-items-center relative">
        <h2
          class="text-display-minor text-gradient w-max max-w-full text-center pb-8 tablet:p-4 tablet:absolute tablet:top-1/2 tablet:left-1/2 tablet:-translate-x-1/2 tablet:-translate-y-1/2"
        >
          Take Control of Your<br />Kitchen Today
        </h2>

        <a
          href={`${baseURL}cookbook/`}
          class="inline-block font-bold text-xl tracking-wider px-6 py-3 text-light shadow-2xl shadow-dark bg-green-dark hover:bg-blue-dark rounded-lg transition-all duration-500 green-shimmer-slow hover:blue-shimmer-slow active:brightness-75 text-center w-full tablet:w-max tablet:absolute tablet:-bottom-[75px] tablet:desktopxl:-bottom-[80px] tablet:left-1/2 tablet:-translate-x-1/2"
          >{cTA}</a
        >
      </div>

      <div class="div2 content-center justify-items-end">
        <IconKitchenPackCake class="hidden tablet:block w-full h-auto max-w-28 desktop:max-w-20" />
      </div>

      <div class="div3 content-center">
        <IconKitchenPackKnife class="hidden tablet:block w-full h-auto max-w-28 desktop:max-w-20" />
      </div>

      <div class="div4 content-start justify-items-center">
        <IconKitchenPackMixer class="hidden tablet:block w-full h-auto max-w-28 desktop:max-w-20" />
      </div>

      <div class="div5 content-end justify-items-center">
        <IconKitchenPackRollingPin
          class="hidden tablet:block w-full h-auto max-w-28 desktop:max-w-20"
        />
      </div>

      <div class="div6 content-center">
        <IconKitchenPackSpatula
          class="hidden tablet:block w-full h-auto max-w-28 desktop:max-w-20"
        />
      </div>

      <div class="div7 content-center justify-items-end">
        <IconKitchenPackTea class="hidden tablet:block w-full h-auto max-w-28 desktop:max-w-20" />
      </div>

      <div class="div8 content-center">
        <IconKitchenPackPestleMortar
          class="hidden tablet:block w-full h-auto max-w-28 desktop:max-w-20"
        />
      </div>

      <div class="div9 content-center justify-items-end">
        <IconKitchenPackPot class="hidden tablet:block w-full h-auto max-w-28 desktop:max-w-20" />
      </div>
    </div>
  </section>
</Base>

<style>
  section {
    content-visibility: auto;
  }

  .image-row-1,
  .image-row-2 {
    animation: shift-right linear;
    animation-timeline: view();
    animation-range: contain 25% exit;
    animation-duration: 1ms;
  }

  @media (width < 768px) {
    .image-row-2 {
      animation: shift-left linear;
      animation-timeline: scroll();
    }
  }

  @media (prefers-reduced-motion) {
    .image-row-1,
    .image-row-2 {
      animation: none;
    }
  }

  @keyframes shift-right {
    from {
      transform: translateX(0) rotate(0deg);
    }
    to {
      transform: translateX(100px) rotate(45deg);
    }
  }

  @keyframes shift-left {
    from {
      transform: translateX(0) rotate(0deg);
    }
    to {
      transform: translateX(-100px) rotate(-45deg);
    }
  }

  @media (min-width: 768px) {
    .circular-grid {
      display: grid;
      grid-template-columns: repeat(11, 1fr);
      grid-template-rows: repeat(5, 1fr);
      grid-column-gap: 0px;
      grid-row-gap: 0px;
    }

    .div1 {
      grid-area: 3 / 3 / 4 / 10;
    }
    .div2 {
      grid-area: 3 / 1 / 4 / 2;
    }
    .div3 {
      grid-area: 3 / 11 / 4 / 12;
    }
    .div4 {
      grid-area: 5 / 6 / 6 / 7;
    }
    .div5 {
      grid-area: 1 / 6 / 2 / 7;
    }
    .div6 {
      grid-area: 4 / 3 / 5 / 4;
    }
    .div7 {
      grid-area: 4 / 9 / 5 / 10;
    }
    .div8 {
      grid-area: 2 / 3 / 3 / 4;
    }
    .div9 {
      grid-area: 2 / 9 / 3 / 10;
    }
  }
</style>
