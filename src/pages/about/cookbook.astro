---
import Base from '@layouts/Base.astro';
import { Image } from 'astro:assets';
import ImageChoppingBoard from '@images/about/cookbook/chopping-board.png';
import ImageMeat from '@images/about/cookbook/meat.png';
import ImageRibs from '@images/about/cookbook/ribs.png';
import ImageMint from '@images/about/cookbook/mint.png';
import ImageBlueberry from '@images/about/cookbook/blueberry.png';

const baseURL = import.meta.env.BASE_URL;

const title = "David's Cookbook - About";
const header = 'Discover Your Next Favorite Recipe';
const subheader = 'Explore a diverse cookbook with easy-to-follow dishes';
const cTA = 'START COOKING';
---

<Base title={title}>
  <section
    class="relative overflow-hidden pt-28 pb-40 laptop:py-36 bg-blue-dark dark:bg-blue-dark/60 text-light"
  >
    <div
      class="relative z-30 container py-10 flex flex-col items-center gap-8 bg-dark/25 backdrop-blur-md laptop:bg-dark/0 laptop:backdrop-blur-none"
    >
      <h1
        class="text-display laptop:max-w-[50vw] desktop:max-w-[65vw] desktopxl:max-w-[50vw] text-center"
      >
        {header}
      </h1>

      <p class="text-display-eyebrow text-center pb-8">{subheader}</p>

      <a
        href={`${baseURL}cookbook/`}
        class="font-bold text-xl tracking-wider px-6 py-3 text-light bg-green-dark hover:bg-blue-dark rounded-lg transition-all duration-500 green-shimmer-slow hover:blue-shimmer-slow active:brightness-75"
        >{cTA}</a
      >
    </div>
    <Image
      src={ImageMint}
      alt="Mint leaves"
      width={ImageMint.width}
      height={ImageMint.height}
      loading="eager"
      class="w-max h-auto absolute z-10 laptop:z-0 -left-40 -top-36 tablet:-left-60 tablet:-top-40 laptop:-top-52 laptop:-left-56 desktop:-left-48 desktop:-top-28 -rotate-45 desktop:rotate-0 scale-50 desktop:scale-100"
    />
    <Image
      src={ImageBlueberry}
      alt="Blueberries"
      width={ImageBlueberry.width}
      height={ImageBlueberry.height}
      loading="eager"
      class="w-max h-auto absolute z-0 -right-40 -top-32 laptop:right-[unset] laptop:top-[unset] laptop:-left-44 laptop:-bottom-36 desktop:-bottom-32 -rotate-45 laptop:rotate-[145deg] desktop:rotate-12 scale-50 desktop:scale-100"
    />
    <Image
      src={ImageChoppingBoard}
      alt="Chopping Board"
      width={ImageChoppingBoard.width}
      height={ImageChoppingBoard.height}
      loading="eager"
      class="w-max h-auto absolute z-10 laptop:z-0 -right-32 -bottom-28 tablet:-right-36 tablet:-bottom-40 laptop:bottom-[unset] laptop:-top-28 laptop:-right-36 -rotate-12 desktop:rotate-45 scale-50 desktop:scale-100"
    />
    <Image
      src={ImageMeat}
      alt="Meat"
      width={ImageMeat.width}
      height={ImageMeat.height}
      loading="eager"
      class="w-max h-auto absolute z-0 laptop:z-10 -left-48 -bottom-14 tablet:-left-56 laptop:-right-56 laptop:-bottom-32 laptop:left-[unset] desktop:-right-32 desktop:-bottom-20 rotate-180 laptop:rotate-12 desktop:rotate-0 scale-50 desktop:scale-100"
    />
    <Image
      src={ImageRibs}
      alt="Ribs"
      width={ImageRibs.width}
      height={ImageRibs.height}
      loading="eager"
      class="w-max h-auto hidden laptop:block absolute z-0 -bottom-48 -right-44 desktop:-bottom-40 desktop:-right-48 rotate-45 desktop:rotate-12 scale-50 desktop:scale-100"
    />
  </section>
</Base>
