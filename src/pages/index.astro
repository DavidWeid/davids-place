<script>
  const headshot = document.getElementById('headshot');
  let activeFilter = '';

  headshot?.addEventListener('click', () => {
    const filterClasses = [
      'grayscale',
      'saturate-200',
      'brightness-150',
      'hue-rotate-[200deg]',
      'hue-rotate-[300deg]',
      'sepia',
    ];

    if (activeFilter) {
      headshot.classList.remove(activeFilter);
      activeFilter = '';
      return;
    }

    const randomFilter =
      filterClasses[Math.floor(Math.random() * filterClasses.length)];
    headshot.classList.add(randomFilter);
    activeFilter = randomFilter;
  });
</script>
